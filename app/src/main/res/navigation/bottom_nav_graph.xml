<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.orango.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/recommendedFragment"
        android:name="com.example.orango.ui.recommended.RecommendedFragment"
        android:label="fragment_recommended"
        tools:layout="@layout/fragment_recommended"/>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.orango.ui.fourMainFragments.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart"/>

    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.example.orango.ui.fourMainFragments.ServicesFragment"
        android:label="fragment_services"
        tools:layout="@layout/fragment_services"/>
    <fragment
        android:id="@+id/suggestedMealsFragment"
        android:name="com.example.orango.ui.suggestedMeals.SuggestedMealsFragment"
        android:label="fragment_suggested_meals"
        tools:layout="@layout/fragment_suggested_meals" >
        <action
            android:id="@+id/action_suggestedMealsFragment_to_suggestedMealIngriedientsFragment"
            app:destination="@id/suggestedMealIngriedientsFragment" />
    </fragment>
    <fragment
        android:id="@+id/suggestedMealIngriedientsFragment"
        android:name="com.example.orango.ui.suggestedMealIngriedients.SuggestedMealIngriedientsFragment"
        android:label="fragment_suggested_meal_ingriedients"
        tools:layout="@layout/fragment_suggested_meal_ingriedients" >
        <action
            android:id="@+id/action_suggestedMealIngriedientsFragment_to_suggestedMealsFragment"
            app:destination="@id/suggestedMealsFragment" />
        <argument
            android:name="mealName"
            app:argType="string" />
    </fragment>

</navigation>