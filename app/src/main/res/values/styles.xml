<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OnBoardingImageButton">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="TitleTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_26ssp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/_16sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_16sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_16sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_16sdp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="OTPEditText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_32ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/_25sdp</item>
    </style>
</resources>